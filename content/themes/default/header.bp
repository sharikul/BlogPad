<html>
	<head>
		{- IF isset($title) -}
			<title>{- VAR title -} &mdash; Sharikul's Blog</title>
		{- ELSE -}
			<title>BlogPad</title>
		{- END IF -}
		<link rel="stylesheet" href="{- VAR stylesheet -}">

		{- WHEN 'POST' -}
			<meta name="description" content="{- metadata: description -}">
		{- END WHEN -}
	</head>
	<body>
		<header>
			<ul>
				<li>Home</li>
				<li>Twitter</li>
				<li>Email</li>
			</ul>
		</header>

		<form id="form" method="POST">
			<input type="text" name="s" id="s">
		</form>

		<script>
			document.getElementById('s').onkeyup = function() {
				document.getElementById('form').setAttribute('action', '{- VAR homepage -}/search/' + this.value + '/');
			}
		</script>