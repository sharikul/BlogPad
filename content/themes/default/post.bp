{- GET 'header' -}

{- BEGIN POST -}

	<h1>{- title -}</h1>
    <h3>{- description -}</h3>

	<time datetime="{- date: %date%-%month%-%year% -}">Posted on {- date: %date% %month%, %year% -}</time>

	{- post -}

    <p>Post updated on {- date-updated: %date% \of %month%, %year% -}</p>

    <ul>
        <li class="cat">{- categories -}</li>
    </ul>


{- END POST -}

{- GET 'footer' -}